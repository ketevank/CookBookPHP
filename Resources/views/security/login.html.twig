{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Logowanie' }}
{% endblock %}

{% block menu %}
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/register">Załóż konto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/login">Zaloguj się</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block header %}
    <h1>Książka kucharska</h1>
{% endblock %}

{% block body %}
    <h1>
        Logowanie:
    </h1>
    <form method="post" action="{{ url('security_login') }}">
        {% if error %}
            {%  include 'default/_single_flash_message.html.twig' with {
                type: 'danger',
                message: error.messageKey|trans(error.messageData, 'security')
            } %}
        {% endif %}

        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="name">{{ 'Nazwa użytkownika' }}</label>
            <div class="col-sm-10">
                <input type="name" id="name" name="name" value="{{ last_username }}" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="password">{{ 'Hasło' }}</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="password" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group row float-sm-right">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="submit" value="{{ 'Zaloguj' }}" class="btn btn-primary" />
        </div>
    </form>
{% endblock %}
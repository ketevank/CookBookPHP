{% extends 'base.html.twig' %}

{% block menu %}
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <a class="navbar-brand">Witaj, {{ app.user.username }}!</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Strona główna</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('recipe_index') }}">Moja lista przepisów</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('recipe_new') }}">Nowy przepis</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_logout') }}">Wyloguj się</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_index') }}">Użytkownicy</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block header %}
    <h1>Książka kucharska</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% for user in users %}
                <div class="post-preview">
                    <a href="{{ path('user_show', { 'id': user.name }) }}">
                        <h2 class="post-title">
                            {{ user.name }}
                        </h2>
                    </a>
                </div>
                <hr>
            {% endfor %}
            <hr>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block menu %}
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <a class="navbar-brand">{% trans %}Witaj{% endtrans %}, {{ app.user.username }}!</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('recipe_index') }}">{% trans %}Lista przepisów{% endtrans %}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('ingredient_index') }}">{% trans %}Składniki{% endtrans %}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('recipe_new') }}">{% trans %}Nowy przepis{% endtrans %}</a>
            </li>
            {#<li class="nav-item">
                <a class="nav-link" href="{{ path('user_edit') }}">Profil</a>
            </li>#}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_logout') }}">{% trans %}Wyloguj się{% endtrans %}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_index') }}">{% trans %}Użytkownicy{% endtrans %}</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block header %}
    <h1>{% trans %}Książka kucharska{% endtrans %}</h1>
{% endblock %}

{% block body %}
    <a href="{{ path('recipe_new') }}">{% trans %}Nowy przepis{% endtrans %}</a>

    <h1>{% trans %}Moje przepisy{% endtrans %}:</h1>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% for recipe in recipes %}
                <div class="post-preview">
                    <a href="{{ path('recipe_show', { 'id': recipe.id }) }}">
                        <h2 class="post-title">
                            {{ recipe.title }}
                        </h2>
                    </a>
                    <p class="post-meta">{% trans %}Autor{% endtrans %}: {{app.user.username}}</p>
                </div>
                <hr>
            {% endfor %}
            <hr>
        </div>
    </div>
{% endblock %}
